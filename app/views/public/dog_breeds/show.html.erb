<div class="shiba-background">
  <div class="container">
    <div class="row">
  		<div class="row align-items-center">
        <%= attachment_image_tag(@dog_breed, :dog_image, size: "340x220", fallback: "no_image.jpg" ) %>
      </div>

      <div class="col-4 offset-1 product_show pt-2 pb-2">
        <h2><%= @dog_breed.dog_name %></h2><br>
        <h2><%= @dog_breed.genre.name %></h2><br>
        <h2><%= @dog_breed.dog_introduction %></h2><br>
      </div>
      <!--コメント機能-->
      <div class="comments">
        <p>コメント件数：<%= @dog_breed.comments.count %></p>
        <% @dog_breed.comments.each do |comment| %>
          <%= @comment.member.name %>
          <%= @comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
        <% end %>
      </div>

      <div class="new-comment">
      <%= form_with(model:[@dog_breed, @comment],url: public_dog_breed_comments_path(@dog_breed), local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
