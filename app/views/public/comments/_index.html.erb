<div id="dog_breed_<%= dog_breed.id %>">
<p>コメント件数：<%= dog_breed.comments.count %></p>

<% dog_breed.comments.each do |comment| %>
    <%= comment.member.first_name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>

    <% if comment.member == current_member %>
      <div class="comment-delete">
        <%= link_to "削除", public_dog_breed_comment_path(comment.dog_breed, comment), method: :delete, remote: true %>
      </div>
    <% end %>
<% end %>
</div>