<% content_for :title do %>
  ワンだふる犬図鑑-ログイン
<% end %>

<div class="container">
  <h2 class="login-title">ログイン</h2>

  <div class="member-login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field member-login-text">
        <%= f.label :メールアドレス%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field member-login-text">
        <%= f.label :パスワード%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field member-login-text">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success btn-sm text-center" %>
      </div>
    <% end %>

    <div class="member-unregistered">
      <h4>未登録の方</h4>
      <%= link_to "こちら", new_member_registration_path %> から新規登録してください。<br />

      パスワードを忘れた方は<%= link_to "こちら", new_password_path(resource_name) %>
    </div>
  </div>
</div>
