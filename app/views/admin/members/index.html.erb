<div class="container m-5">
  <h2 class="member-index-title">会員一覧</h2>
  <table class='table table-light table-hover member-table'>
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td>
            <%= link_to admin_member_path(member.id) do %>
              <%= member.last_name %><%= member.first_name %>
            <% end %>
          </td>
          <td><%= member.email %></td>
          <td>
            <% if member.is_active == true %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>