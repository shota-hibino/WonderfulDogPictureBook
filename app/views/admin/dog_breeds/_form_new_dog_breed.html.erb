<div class="form-group row">
  <%= f.label :"犬種画像", class: "col-sm-4 dog_breed_new_edit-text" %>
  <%= f.attachment_field :dog_image, class: "col-sm-8" %>
</div>

<div class="form-group row">
  <%= f.label :"犬種名", class: "col-sm-4 dog_breed_new_edit-text"%>
  <%= f.text_field :dog_name, class: "col-sm-8 form-control-static" %>
</div>

<div class="form-group row">
  <%= f.label :"犬種説明", class: "align-top col-sm-4 dog_breed_new_edit-text" %>
  <%= f.text_area :dog_introduction, wrap: "hard", cols: "10", class: "col-sm-8" %>
</div>

<div class="form-group row">
  <%= f.label :"ジャンル", class: "col-sm-4 dog_breed_new_edit-text" %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, class: "col-sm-8") %>
</div>