<div class="container">
  <h2 class="genre-title">ジャンル一覧・追加</h2>
  <div class="genre">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit "新規登録", class: 'btn btn-success' %></th>
        </tr>
      </table>
    <% end %>
  </div>

  <% if @genres.exists? %>
    <table class="table table-light table-hover">
      <thead class="thead-light">
        <th>ジャンル</th>
        <th colspan="2"></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br><br>
    <h4>まだジャンルが追加されていません。</h4>
  <% end %>
</div>