<% content_for :title do %>
  ワンだふる犬図鑑-ジャンル編集
<% end %>

<div class="container">
  <h2 class="genre-edit-title">ジャンル編集</h2>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
    <table class="genre-edit">
      <tr>
        <th>ジャンル名</th>
        <th><%= f.text_field :name %></th>
        <th class="action"><%= f.submit "変更を保存", class: 'btn btn-success' %></th>
      </tr>
    </table>
  <% end %>
